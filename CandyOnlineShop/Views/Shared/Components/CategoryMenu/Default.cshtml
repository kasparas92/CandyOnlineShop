@model IEnumerable<Category>;

<li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown">Categories</a>
    <ul class="dropdown-menu">
        @foreach(var category in Model)
        {
            <li>
                <a asp-controller="Candy" asp-action="Index" asp-route-category="@category.Name">@category.Name</a>
            </li>
        }

        <li>
            <a asp-controller="Candy" asp-action="Index" asp-route-category="">View All</a>
        </li>
    </ul>
</li>

