@model ShoppingCartViewModel;


<h2>Shopping Cart</h2>
<table class="table table-bordered" >
    <thead>
        <tr>
            <th>Selected Amount</th>
            <th>Candy</th>
            <th class="text-right">Price</th>
            <th class="text-right">SubTotal</th>
            <th class="text-left">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.ShoppingCartItem)
        {
        <tr>
            <td class="text-center">@item.Amount</td>
            <td class="text-left">@item.Candy.Name</td>
            <td class="text-right">@item.Candy.Price.ToString("c")</td>
            <td class="text-right">@((item.Candy.Price * item.Amount).ToString("c"))</td>
            <td class="text-left">
                <a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-candyId="@item.Candy.Id">
                    Remove
                </a>
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-right">Total</td>
            <td class="text-right">@Model.ShoppingCartTotal.ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="ClearCart">Clear Cart</a>
    <a class="btn btn-primary" asp-controller="Order" asp-action="CheckOut">Check Out</a>
</div>